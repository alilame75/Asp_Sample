@model Asp_Sample.Areas.Admin.Models.VoteTimeDto
@{
    ViewData["Title"] = "EditVoteTime";
}

<h1>EditVoteTime</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditVoteTime">
            <input asp-for="VoteId" value="@Model.VoteId" type="hidden" />
            <div class="form-group">
                <label asp-for="VoteTime" class="control-label">انتخاب زمان</label>
                <input placeholder="@Model.VoteTime" value="@Model.VoteTime" asp-for="VoteTime" class="form-control" />
                <span asp-validation-for="VoteTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}