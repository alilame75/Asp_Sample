@model IEnumerable<DataLayer.Entity.Group.UserGroup>

@{

    ViewData["Title"] = "index";
}


<div class="text-center">
    
    <p>
        <a class="btn btn-outline-primary align-middle" asp-action="Create">اضافه کردن شخص به گروه ها </a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th class="align-middle">
                نام کاربری
            </th>
            <th>
                عنوان گروه
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Group.GroupTitle)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.UserGroupId">ویرایش</a> |
                    @*<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.UserGroupId">جزئیات</a> |*@
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.UserGroupId">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
