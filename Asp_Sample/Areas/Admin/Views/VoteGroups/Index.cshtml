@model IEnumerable<DataLayer.Entity.Group.VoteGroup>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group.GroupTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vote.VoteName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vote.VoteName)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.VoteGroupId">Edit</a> |
                @*<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.VoteGroupId">Details</a> |*@
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.VoteGroupId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
