@model Asp_Sample.Areas.Account.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
}

<h1>ChangePassword</h1>

<div>
    <form asp-area="Account" asp-controller="Home" asp-action="ChangePassword" method="post">
        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

        <label asp-for="OldPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <label asp-for="NewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <label asp-for="ConfirmNewPassword" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">تغییر پسورد</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}